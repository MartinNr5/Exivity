{
	"name": "exivity",
	"description": "A language server for Exivity USE Script and Transcript",
	"author": "Martin Edelius",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/MartinNr5/Exivity"
	},
	"publisher": "Martin Edelius",
	"categories": [
		"Snippets"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:exivityuse"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Base configuration",
			"properties": {
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "exivityuse",
				"aliases": [
					"Exivity Use Script"
				],
				"extensions": [
					".usescript",
					".use"
				],
				"configuration": "./exivityuse.language-configuration.json"
			},
			{
				"id": "exivitytrs",
				"aliases": [
					"Exivity Transcript"
				],
				"extensions": [
					".trs"
				],
				"configuration": "./exivitytrs.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "exivityuse",
				"scopeName": "source.exivityuse",
				"path": "./syntaxes/exivityuse.plist"
			},
			{
				"language": "exivitytrs",
				"scopeName": "source.exivitytrs",
				"path": "./syntaxes/exivitytrs.plist"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	}
}